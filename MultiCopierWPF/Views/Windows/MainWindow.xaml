<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MultiCopierWPF"
        xmlns:cmd="clr-namespace:MultiCopierWPF.Infrastructure.Commands"
        xmlns:vm="clr-namespace:MultiCopierWPF.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="MultiCopierWPF.MainWindow"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="450" 
        Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>

        <!-- Menu at the top -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit">
                    <MenuItem.Command>
                        <cmd:CloseApplicationCommand />
                    </MenuItem.Command>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Button in the center -->
        <Button Content="Button" Width="182" Height="29" DockPanel.Dock="Top" Margin="10"/>

        <!-- CheckBox on the left -->
        <CheckBox Content="CheckBox" Width="100" DockPanel.Dock="Left" Margin="10" Height="20"/>

        <!-- Slider below the Button -->
        <Slider DockPanel.Dock="Top" Margin="10" Minimum="0" Maximum="100" Value="50" TickFrequency="1" IsSnapToTickEnabled="True" />

        <!-- Label below the Slider -->
        <Label Content="This is a Label" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="10"/>

        <!-- TextBox for binding -->
        <TextBox HorizontalAlignment="Stretch"
                 Margin="10, 50, 10, 10" 
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Top"
                 Width="390" />

        <!-- StackPanel for additional controls -->
        <StackPanel DockPanel.Dock="Bottom" Margin="10">
            <Button Content="Another Button" Width="161" Height="40" Margin="5"/>
            <TextBlock Text="Some text in a TextBlock" Margin="5"/>
            <ProgressBar Minimum="0" Maximum="100" Value="25" Height="20" Margin="5"/>
        </StackPanel>

    </DockPanel>
</Window>
