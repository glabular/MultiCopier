<Window
    x:Class="MultiCopierWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmd="clr-namespace:MultiCopierWPF.Infrastructure.Commands"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:MultiCopierWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MultiCopierWPF.ViewModels"
    Title="{Binding Title}"
    Width="650"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel>
        <Grid Margin="20,10,20,20" DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Add button on the left  -->
            <Button
                Grid.Column="0"
                Width="120"
                HorizontalAlignment="Left"
                Command="{Binding AddBackupCommand}"
                Content="+ Add Backup" />

            <!--  Backup now button  -->
            <Button
                Grid.Column="1"
                Width="100"
                HorizontalAlignment="Center"
                Command="{Binding BackupCommand}"
                Content="Back up now!" />
        </Grid>

        <StackPanel Margin="10">
            <!--  Label for main source folder  -->
            <TextBlock
                Margin="0,0,0,5"
                FontSize="14"
                FontWeight="Bold"
                Text="Main Folder:" />

            <!--  Main source folder  -->
            <Border
                Margin="0,0,0,20"
                Padding="5"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="4">
                <DockPanel>
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="📁" />
                    <TextBox
                        VerticalContentAlignment="Center"
                        Background="#F0F8FF"
                        FontWeight="Bold"
                        Text="{Binding MasterFolder, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
            </Border>

            <!--  Backup locations  -->
            <TextBlock
                Margin="0,0,0,10"
                FontSize="14"
                FontWeight="Bold"
                Text="Backups:" />

            <ScrollViewer MaxHeight="230" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding BackupLocations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,5"
                                Padding="5"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="0,0,5,0"
                                        VerticalAlignment="Center"
                                        FontSize="16">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="✔" />
                                                <Setter Property="Foreground" Value="Green" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                        <Setter Property="Text" Value="⏳" />
                                                        <Setter Property="Foreground" Value="Orange" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Text" Value="❌" />
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!--  Path textbox  -->
                                    <TextBox
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Text="{Binding Path, UpdateSourceTrigger=PropertyChanged}" />

                                    <!--  Remove button  -->
                                    <Button
                                        Grid.Column="2"
                                        Width="30"
                                        Height="30"
                                        Margin="5,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.RemoveBackupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="🗑"
                                        ToolTip="Remove this backup" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>



        </StackPanel>

    </DockPanel>

</Window>
